/* fonts */

@font-face {
    font-family: 'DISCORegular';
    src: url('../fonts/DISCO___-webfont.eot');
    src: url('../fonts/DISCO___-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/DISCO___-webfont.woff') format('woff'),
         url('../fonts/DISCO___-webfont.ttf') format('truetype'),
         url('../fonts/DISCO___-webfont.svg#DISCORegular') format('svg');
    font-weight: normal;
    font-style: normal;
}

/* variables */

font_disco = 'DISCORegular'
color_nav = #000
color_nav_bg = lighten(color_nav, 70%)
color_input_border = #999

/* styles */
body
	font 100%/1.5em 'Helvetica Neue', Arial, sans-serif


footer
	.copyright
		font-size .85em
		text-align center;

header

	.logo
		text-align center

	nav
		font-family font_disco
		font-size 1.4em
		text-transform uppercase

		ul
			list-style none
			margin 0
			padding 0

			li
				a
					background color_nav_bg
					border-radius 0.3125em
					color color_nav
					display block
					font-weight bold
					margin 0.3125em 0.625em
					padding: .2em .4em
					text-align center
					text-decoration none

/* sections */
.home
	.profile
		box-shadow 0 0 0.625em rgba(0,0,0,0.5)
		margin 0.625em auto
		padding 0.1em
		float left
		margin 0 15px 15px 0

	p
		font-size .9em

.works
	margin 0 auto

	.work
		box-shadow 0 0 0.625em rgba(0,0,0,0.5)
		box-sizing border-box
		display inline-block
		margin 1%
		padding 0.1em
		text-align center
		width 47%

		img
			max-width 100%
			display block

.contact
	form
		label
			display block
		input
		textarea
			display block
			box-sizing border-box
			padding .45em
			width 100%

		input[type=submit]
			width auto

		textarea
			resize none
			height 3em

/* media queries */

@media screen and (min-width: 500px)
	
	header
		nav
			font-size .6em
			text-align center
			margin .8em auto 1.5em

			li
				display inline-block
				width 24%

	.works
		.work
			width 31%
			margin .9%



@media screen and (min-width: 778px)

	header
		nav
			font-size 1em

	.contact
		.leftcol
		.rightcol
			vertical-align top
			width 48%
			display inline-block

			&:nth-child(odd)
				margin-right 2%



@media screen and (min-width: 900px)

	.works
		.work
			width 23%
			margin 0.5%

	.wrapper
		max-width 960px
		margin-left auto
		margin-right auto